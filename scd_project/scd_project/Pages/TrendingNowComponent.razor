<style>
    .overlay-card {
        position: relative;
        color: white;
        text-align: center;
        height: 100%;
    }

    .txt1 {
        color: white;
        font-family: 'Merriweather', serif;
    }

    .overlay-card .overlay {
        position: absolute;
        bottom: 0;
        width: 100%;
        padding: 1rem;
        font-weight: bold;
        background-color: #ceedec;
        color: #242f66;
        font-family: 'Lato', sans-serif;
        font-size:1rem;

    }

    .discount-card {
        position: relative;
        color: white;
        height: 100%;
    }

        .discount-card .content {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
        }

        .discount-card .btn-outline-light {
            border-width: 2px;
        }

    .card-img {
        height: 230px; /* Consistent image height */
        width: 100%;
        object-fit: cover;
    }

    .trending-title {
        font-weight: bold;
    }
    .head
    {
